{{yield}}
<div class="job">
  <Job::Image
    src={{@job.imageSource}}
    alt={{@job.title}}
  />
  <div class="details">
    <h3>{{@job.title}}</h3>
    <div class="detail date-range">
      <span>Worked here from:</span> {{@job.startDate}} - {{@job.endDate}}
    </div>
    <div class="detail pay-range">
        <span>Pay range:</span> {{@job.startingPay}} - {{@job.endingPay}}
    </div>
    {{#if this.isExpanded}}
      <div class="detail location">
        <span>Location:</span> {{@job.location}}
      </div>
      <div class="detail career">
        <span>Part of my career in:</span> {{@job.career}}
      </div>
    {{/if}}
    <div class="show-more-button">
      <button class="button" {{on "click" this.expand}}>Show {{#if this.isExpanded}}less{{else}}more{{/if}}</button>
    </div>
  </div>
</div>
